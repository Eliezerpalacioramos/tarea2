@page "/ej/05"
@rendermode InteractiveServer
<PageTitle>Ejercicio 5</PageTitle> 

<h3>Ejercicio 5</h3>

<h3>Cantidad de Dígitos Primos</h3>
<p>Ingresa un número:</p>
<input @bind="numero" type="number" />
<button @onclick="ContarDigitosPrimos">Contar Dígitos Primos</button>

<p>Cantidad de dígitos primos: @cantidadDigitosPrimos</p>

@code {
    private int numero;
    private int cantidadDigitosPrimos;

    private bool EsPrimo(int digito)
    {
        if (digito < 2) return false;
        for (int i = 2; i <= Math.Sqrt(digito); i++)
        {
            if (digito % i == 0) return false;
        }
        return true;
    }

    private void ContarDigitosPrimos()
    {
        cantidadDigitosPrimos = 0;
        foreach (char digito in numero.ToString())
        {
            int dig = int.Parse(digito.ToString());
            if (EsPrimo(dig))
            {
                cantidadDigitosPrimos++;
            }
        }
    }
}